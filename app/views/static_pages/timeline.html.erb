<main class="container content-container">

  <%= render :partial => "header", :locals => { :toggled => "about" } %>




<!-- Start of main Timeline section -->
  <section id="timeline" class="row">
    <div class="row">



<!-- LEFT side -->
<!--            -->
<!--            -->
<!--            -->

      <div class="col-lg-5 visible-lg">

  <!-- row for Basic Info  -->
        <div class="row">
          <div class="col-xs-12">

            <div class=" panel panel-default">

              <div class="panel-heading">

                <h3 class="panel-title text-center">
                  About
                </h3>

              </div>


              <div class="panel-body col-sm-offset-1">

                <p><strong>Born on: </strong>July 31st, 1980</p>
                <p><strong>Went to school at: </strong>Hogwarts</p>
                <p><strong>Hometown: </strong>Godrick's Hollow, England</p>
                <p><strong>Currently lives: </strong>Godrick's Hollow</p>

              </div>

            </div> <!-- end of panel -->

          </div> <!-- end of col -->

        </div> <!-- end of row -->
<!-- end of Basic Info -->


  <!-- row for Photos  -->
        <div class="row">
          <div class="col-xs-12">

            <div class=" panel panel-default">

              <div class="panel-heading">

                <h3 class="panel-title text-center">
                  Photos <small>(123)</small>
                </h3>

              </div>


              <div class="panel-body">

                <% 3.times do %>
                  <div class="row">
                    <% 3.times do %>
                      <%= render "timeline_photo" %>
                    <% end %>
                  </div>
                <% end %>


                <div class="row">

                  <div class="col-xs-12 text-center">

                    <%= link_to "See more photos", photos_path, alt: "See more photos" %>

                  </div>

                </div>

              </div> <!-- end of panel body -->

            </div> <!-- end of panel -->

          </div> <!-- end of col -->

        </div> <!-- end of row -->
<!-- end of Photos panel -->




<!-- row for Friends  -->
        <div class="row">
          <div class="col-xs-12">

            <div class=" panel panel-default">

              <div class="panel-heading">

                <h3 class="panel-title text-center">
                  Friends <small>(542)</small>
                </h3>

              </div>


              <div class="panel-body">

                <% 2.times do %>
                  <div class="row">
                    <% 3.times do %>
                      <%= render "timeline_friend" %>
                    <% end %>
                  </div>
                <% end %>


                <div class="row">

                  <div class="col-xs-12 text-center">

                    <%= link_to "See More Friends", friends_path, alt: "See more friends" %>

                  </div>

                </div>

              </div> <!-- end of panel body -->

            </div> <!-- end of panel -->

          </div> <!-- end of col -->

        </div> <!-- end of row -->
<!-- end of Friends panel -->

      </div>
<!-- end of LEFT side -->





<!-- RIGHT side -->
<!--            -->
<!--            -->
<!--            -->

      <div class="col-lg-7">


<!-- MAKE POST -->

        <div class=" panel panel-default">

          <div class="panel-heading">

            <h3 class="panel-title text-center">
              Post
            </h3>

          </div>



          <form id="post-form">


            <div class="panel-body">

              <div class="row">

                <textarea class="form-control" rows="3">Tell the world something...</textarea>

              </div>

            </div>


            <div class="panel-footer">

              <div class="row">

                <div class="col-md-12">

                  <button type="submit" class="btn btn-primary btn-sm pull-right">
                    Post
                  </button>

                </div>

              </div>

            </div> <!-- end of footer -->


          </form>

        </div> <!-- end of panel -->

<!-- end of Make Post section -->




<!-- EXISTING POST -->

        <div class="row">
          <div class="col-xs-12">

            <div class=" panel panel-default">



              <div class="panel-body">

                <div class="row">

                  <div class="media">

                    <div class="col-md-12">


                      <!-- Media list image -->
                      <div class="media-left">

                        <a href="#">
                          <img id="user-photo" class="media-object" src="assets/harry_potter_small.jpg" height="50" width="50" alt="Post author's photo">
                          <img>
                        </a>

                      </div>  <!-- end of image section -->


                      <div class="media-body">


                        <!-- Post name and date -->
                        <div class="media-heading">

                          <%= link_to "Harry Potter", about_path %>

                          <br>

                          <time datetime="2014-06-01" pubdate>
                            <small>Posted on Thursday 6/1/2014</small>
                          </time>

                        </div>


                        <!-- Post text -->
                        <p>
                          Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                          tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                          quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                          consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
                          cillum dolore eu fugiat nulla pariatur.
                        </p>

                      </div> <!-- end of post body -->

                    </div>

                  </div> <!-- end of Media List -->

                </div>

              </div> <!-- end of panel body -->


              <!-- Feedback section for likes and comments -->
              <div class="panel-footer">


                <!-- Row to hold links -->
                <div class="row">

                  <div class="col-xs-12">

                    <div class="pull-left">
                      <a href="#" alt="Like this post">Like</a>
                      <a href="#" alt="Comment on this post">Comment</a>
                    </div>

                    <div class="pull-right">
                      <a href="#" alt="Like this post">Delete</a>
                    </div>

                  </div>  <!-- end of links row -->


                </div>

              </div> <!-- end of panel footer -->


            </div> <!-- end of panel -->


          </div>
        </div>
<!--  end of Existing Post-->




<!-- LIKED EXISTING POST -->

        <div class="row">
          <div class="col-xs-12">

            <div class=" panel panel-default">



              <div class="panel-body">

                <div class="row">

                  <div class="media">

                    <div class="col-md-12">


                      <!-- Media list image -->
                      <div class="media-left">

                        <a href="#">
                          <img id="user-photo" class="media-object" src="assets/harry_potter_small.jpg" height="50" width="50" alt="Post author's photo">
                          <img>
                        </a>

                      </div>  <!-- end of image section -->


                      <div class="media-body">


                        <!-- Post name and date -->
                        <div class="media-heading">

                          <%= link_to "Harry Potter", about_path %>

                          <br>

                          <time datetime="2014-05-21" pubdate>
                            <small>Posted on Thursday 5/21/2014</small>
                          </time>

                        </div>


                        <!-- Post text -->
                        <p>
                          Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                          tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                          quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                          consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
                          cillum dolore eu fugiat nulla pariatur.
                        </p>

                      </div> <!-- end of post body -->

                    </div>

                  </div> <!-- end of Media List -->

                </div>

              </div> <!-- end of panel body -->


              <!-- Feedback section for likes and comments -->
              <div class="panel-footer">


                <!-- Row to hold links -->
                <div class="row">

                  <div class="col-xs-12">

                    <div class="pull-left">
                      <a href="#" alt="Like this post">Like</a>
                      <a href="#" alt="Comment on this post">Comment</a>
                    </div>

                    <div class="pull-right">
                      <a href="#" alt="Like this post">Delete</a>
                    </div>

                  </div>

                </div>  <!-- end of links row -->


                <!-- Row to track likes -->
                <div class="row">

                  <div class="col-xs-12">

                    <div class="pull-left">
                      <a href="#" alt="Link to profile of the person who liked this post.">Hermione Granger</a> likes this.
                    </div>

                  </div>

                </div>  <!-- end of likes row -->

              </div> <!-- end of panel footer -->


            </div> <!-- end of panel -->


          </div>
        </div>
<!--  end of Liked Existing Post-->




      <%= render "timeline_post" %>



      </div>
<!-- end of RIGHT side -->

    </div>
  </section>




</main> <!-- container -->

